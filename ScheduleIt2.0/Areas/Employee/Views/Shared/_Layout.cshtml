<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
        <!--nav tag added and visible bar restored-->
        <!-- <div class="navbar navbar-dark bg-dark fixed-top navbar-expand-md">-->
        <!--UNNECESSARY^-->
        <div class="container">
            <!--<div class="navbar-header">--> <!--UNNECESSARY-->
            <button type="button" class="navbar-toggler" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
                <!--aria controls added so login/registration button collapses too-->
                <span class="navbar-toggler-icon"></span> <!--added for toggle down menu in small screens-->
                <!--<span class="icon-bar"></span>
                <span class="icon-bar"></span>  UNNECESSARY
                <span class="icon-bar"></span>-->
            </button>
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <img src="~/Content/Logo.png" alt="Logo" style="width:110px;" />  <!--navbar tech academy logo-->
            </a>
            <!--</div>-->
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item active mr-3">@Html.ActionLink("Home", "Index", "Home")</li> <!--class="nav-item active mr-3" added too give links space-->
                    <li class="nav-item active mr-3">@Html.ActionLink("About", "About", "Home")</li>
                    <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
            <span class="nav-text">
                @Html.Partial("_LoginPartial") <!--moved to be on other side of navbar-->
            </span>
        </div>
        <!--</div>-->
    </nav>
    <div class="container body-content mt-5">
        <!--mt-5 added so any body content isn't right underneath the nav-->
        @RenderBody()
        <hr />
        <footer>
            <!--Add Footer Partial view-->
            @Html.Partial("_FooterPartial")
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    <!--add fullcalendar bundle-->
    @Scripts.Render("~/bundles/fullcalendar")
    @RenderSection("scripts", required: false)
</body>
</html>
